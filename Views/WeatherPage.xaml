<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwanCity.Views.WeatherPage"
             Title="Weather">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Weather Image -->
            <Image Source="{Binding WeatherImage}"
                   HeightRequest="200"
                   Aspect="AspectFill"/>
            
            <!-- Weather Details -->
            <Frame Padding="15" BackgroundColor="#F0F0F0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding WeatherCondition, StringFormat='Current Weather: {0}'}"
                          FontSize="24"
                          FontAttributes="Bold"
                          HorizontalOptions="Center"/>
                    
                    <Label Text="{Binding Temperature, StringFormat='Temperature: {0}'}"
                          FontSize="18"/>
                    
                    <Label Text="{Binding CurrentTime, StringFormat='Time: {0}'}"
                          FontSize="16"/>
                    
                    <Label Text="{Binding Humidity, StringFormat='Humidity: {0}'}"
                          FontSize="16"/>
                    
                    <Label Text="{Binding WindSpeed, StringFormat='Wind Speed: {0}'}"
                          FontSize="16"/>
                    
                    <Label Text="{Binding UvIndex, StringFormat='UV Index: {0}'}"
                          FontSize="16"/>
                    
                    <Label Text="{Binding WeatherDescription}"
                          FontSize="16"
                          FontAttributes="Italic"
                          HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
