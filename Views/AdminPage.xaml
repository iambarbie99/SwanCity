<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwanCity.Views.AdminPage"
             Title="Admin Panel">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Admin Panel"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>
            
            <!-- Management Section -->
            <Label Text="Management"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                   Margin="0,10,0,10"/>
            
            <Button Text="Manage Routes"
                    Clicked="NavigateToRoutes"
                    Style="{StaticResource PrimaryButton}"
                    FontSize="16"
                    HeightRequest="60"
                    CornerRadius="10"/>
            
            <Button Text="Manage Packages"
                    Clicked="NavigateToPackages"
                    Style="{StaticResource PrimaryButton}"
                    FontSize="16"
                    HeightRequest="60"
                    CornerRadius="10"/>
            
            <Button Text="Manage Promotions"
                    Clicked="NavigateToPromotions"
                    Style="{StaticResource PrimaryButton}"
                    FontSize="16"
                    HeightRequest="60"
                    CornerRadius="10"/>
            
            <Button Text="Manage Notifications"
                    Clicked="NavigateToNotifications"
                    Style="{StaticResource PrimaryButton}"
                    FontSize="16"
                    HeightRequest="60"
                    CornerRadius="10"/>
            
            <!-- Navigation Section -->
            <Label Text="Navigation"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                   Margin="0,30,0,10"/>
            
            <Button Text="Back to User View"
                    Clicked="NavigateToUserView"
                    Style="{StaticResource SecondaryButton}"
                    FontSize="16"
                    HeightRequest="60"
                    CornerRadius="10"
                    Margin="0,0,0,20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
