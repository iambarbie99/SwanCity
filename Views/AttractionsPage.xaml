<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:viewModels="clr-namespace:SwanCity.ViewModels"
             xmlns:models="clr-namespace:SwanCity.Models"
             x:Class="SwanCity.Views.AttractionsPage"
             Title="Tourist Attractions"
             x:DataType="viewModels:AttractionsViewModel">

    <Grid>
        <maps:Map x:Name="attractionsMap"
                  MapType="Street"
                  IsShowingUser="True"
                  Grid.Row="0"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"/>
        
        <CollectionView Grid.Row="1"
                        Grid.Column="0"
                        ItemsSource="{Binding Attractions}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedAttraction}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:TouristAttraction">
                    <Grid Padding="10">
                        <Frame CornerRadius="10"
                               BackgroundColor="White"
                               Padding="0">
                            <Grid ColumnDefinitions="Auto,*"
                                  RowDefinitions="Auto,Auto,Auto">
                                <Image Source="{Binding ImageUrl}"
                                       Aspect="AspectFill"
                                       HeightRequest="100"
                                       WidthRequest="100"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       Grid.RowSpan="3"/>
                                
                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       Margin="10,5,0,0"
                                       Grid.Row="0"
                                       Grid.Column="1"/>
                                
                                <Label Text="{Binding Description}"
                                       FontSize="14"
                                       MaxLines="2"
                                       LineBreakMode="TailTruncation"
                                       Margin="10,0,0,0"
                                       Grid.Row="1"
                                       Grid.Column="1"/>
                                
                                <Label Text="{Binding Address}"
                                       FontSize="12"
                                       TextColor="Gray"
                                       Margin="10,0,0,5"
                                       Grid.Row="2"
                                       Grid.Column="1"/>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
