<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwanCity.Views.AdvertisingCornerPage"
             Title="Advertising Corner"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Ad 1 -->
            <Frame Padding="0" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout>
                    <Image Source="swan.jpg"
                           HeightRequest="200"
                           Aspect="AspectFill"
                           Margin="0,0,0,10"/>
                    <Label Text="Lin's Swan Garden"
                          FontSize="20"
                          FontAttributes="Bold"
                          TextColor="#333"
                          Margin="10,0,10,0"/>
                    <Label Text="Enjoy a walk along to the garden!"
                          FontSize="16"
                          TextColor="#666"
                          Margin="10,0,10,10"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Ad 2 -->
            <Frame Padding="0" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout>
                    <Image Source="rejang.jpg"
                           HeightRequest="200"
                           Aspect="AspectFill"
                           Margin="0,0,0,10"/>
                    <Label Text="Rajang Esplanade"
                          FontSize="20"
                          FontAttributes="Bold"
                          TextColor="#333"
                          Margin="10,0,10,0"/>
                    <Label Text="Enjoy some family time at the Esplanade!"
                          FontSize="16"
                          TextColor="#666"
                          Margin="10,0,10,10"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Ad 3 -->
            <Frame Padding="0" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout>
                    <Image Source="aup.jpg"
                           HeightRequest="200"
                           Aspect="AspectFill"
                           Margin="0,0,0,10"/>
                    <Label Text="Taman Bukit Aup Jubilee Park"
                          FontSize="20"
                          FontAttributes="Bold"
                          TextColor="#333"
                          Margin="10,0,10,0"/>
                    <Label Text="Breathe in serenity, climb into nature!"
                          FontSize="16"
                          TextColor="#666"
                          Margin="10,0,10,10"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Ad 4 -->
            <Frame Padding="0" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout>
                    <Image Source="town.jpg"
                           HeightRequest="200"
                           Aspect="AspectFill"
                           Margin="0,0,0,10"/>
                    <Label Text="Sibu Town Square Commercial Centre"
                          FontSize="20"
                          FontAttributes="Bold"
                          TextColor="#333"
                          Margin="10,0,10,0"/>
                    <Label Text="Discover the charm, live the experience!"
                          FontSize="16"
                          TextColor="#666"
                          Margin="10,0,10,10"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Ad 5 -->
            <Frame Padding="0" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout>
                    <Image Source="wong.jpg"
                           HeightRequest="200"
                           Aspect="AspectFill"
                           Margin="0,0,0,10"/>
                    <Label Text="Wong Nai Siong Garden"
                          FontSize="20"
                          FontAttributes="Bold"
                          TextColor="#333"
                          Margin="10,0,10,0"/>
                    <Label Text="Where quality meets variety!"
                          FontSize="16"
                          TextColor="#666"
                          Margin="10,0,10,10"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
