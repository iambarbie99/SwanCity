<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwanCity.Views.AdvertisingCornerPage"
             Title="Advertising Corner"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Ad 1 -->
            <Frame Padding="0" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout>
                    <Image Source="swan_river_cruise.jpg"
                           HeightRequest="200"
                           Aspect="AspectFill"
                           Margin="0,0,0,10"/>
                    <Label Text="Swan River Cruise"
                          FontSize="20"
                          FontAttributes="Bold"
                          TextColor="#333"
                          Margin="10,0,10,0"/>
                    <Label Text="Enjoy a scenic cruise along the Swan River!"
                          FontSize="16"
                          TextColor="#666"
                          Margin="10,0,10,10"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Ad 2 -->
            <Frame Padding="0" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout>
                    <Image Source="wildlife_adventure.jpg"
                           HeightRequest="200"
                           Aspect="AspectFill"
                           Margin="0,0,0,10"/>
                    <Label Text="Wildlife Adventure"
                          FontSize="20"
                          FontAttributes="Bold"
                          TextColor="#333"
                          Margin="10,0,10,0"/>
                    <Label Text="Explore native wildlife in their natural habitat!"
                          FontSize="16"
                          TextColor="#666"
                          Margin="10,0,10,10"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Ad 3 -->
            <Frame Padding="0" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout>
                    <Image Source="wine_country.jpg"
                           HeightRequest="200"
                           Aspect="AspectFill"
                           Margin="0,0,0,10"/>
                    <Label Text="Wine Country Tour"
                          FontSize="20"
                          FontAttributes="Bold"
                          TextColor="#333"
                          Margin="10,0,10,0"/>
                    <Label Text="Taste the best wines in the region!"
                          FontSize="16"
                          TextColor="#666"
                          Margin="10,0,10,10"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Ad 4 -->
            <Frame Padding="0" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout>
                    <Image Source="city_highlights.jpg"
                           HeightRequest="200"
                           Aspect="AspectFill"
                           Margin="0,0,0,10"/>
                    <Label Text="City Highlights"
                          FontSize="20"
                          FontAttributes="Bold"
                          TextColor="#333"
                          Margin="10,0,10,0"/>
                    <Label Text="Discover the city's most iconic landmarks!"
                          FontSize="16"
                          TextColor="#666"
                          Margin="10,0,10,10"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Ad 5 -->
            <Frame Padding="0" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <VerticalStackLayout>
                    <Image Source="sunset_cruise.jpg"
                           HeightRequest="200"
                           Aspect="AspectFill"
                           Margin="0,0,0,10"/>
                    <Label Text="Sunset Cruise"
                          FontSize="20"
                          FontAttributes="Bold"
                          TextColor="#333"
                          Margin="10,0,10,0"/>
                    <Label Text="Experience breathtaking sunsets on the river!"
                          FontSize="16"
                          TextColor="#666"
                          Margin="10,0,10,10"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
